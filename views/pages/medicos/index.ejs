<div class="space-y-8">
  <!-- Encabezado -->
  <header class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-[#3F4A4C]">M√©dicos üë©‚Äç‚öïÔ∏è</h1>
      <p class="text-sm text-[#3F4A4C]/70">Gesti√≥n y control del personal m√©dico</p>
    </div>

    <button
      id="btnAddMedico"
      class="bg-[#A7D9B8] hover:bg-[#3F4A4C] hover:text-white text-[#3F4A4C] font-semibold px-5 py-2 rounded-xl shadow transition"
    >
      + Nuevo m√©dico
    </button>
  </header>

  <!-- Filtros Avanzados -->
  <div class="space-y-4">
    <!-- B√∫squeda principal -->
    <form method="GET" action="/medicos" class="flex flex-wrap gap-4 items-center">
      <div class="relative flex-1 min-w-[300px]">
        <input
          type="text"
          name="q"
          id="busquedaMedicos"
          value="<%= typeof busqueda !== 'undefined' ? busqueda : '' %>"
          placeholder="Buscar por nombre, apellido, especialidad, tel√©fono o email..."
          class="w-full px-4 py-2 pl-10 rounded-xl border border-[#E0E6E6] bg-white/60 backdrop-blur-md outline-none focus:ring-2 focus:ring-[#A7D9B8]"
        />
        <div class="absolute left-3 top-2.5 text-gray-400">
          üîç
        </div>
        <!-- Dropdown de sugerencias -->
        <div id="sugerenciasMedicos" class="hidden absolute z-50 w-full mt-1 bg-white rounded-xl shadow-lg border border-[#E0E6E6] max-h-60 overflow-y-auto">
          <!-- Las sugerencias se cargar√°n aqu√≠ din√°micamente -->
        </div>
      </div>
      <button
        type="submit"
        class="px-5 py-2 rounded-xl bg-[#A7D9B8] hover:bg-[#3F4A4C] text-white font-semibold shadow transition"
      >
        Buscar
      </button>
      <button
        type="button"
        onclick="limpiarFiltros()"
        class="px-4 py-2 rounded-xl border border-[#E0E6E6] bg-white/60 hover:bg-gray-100 text-gray-600 transition"
      >
        Limpiar
      </button>
    </form>

    <!-- Filtros adicionales -->
    <div class="flex flex-wrap gap-4 items-center text-sm">
      <div class="flex items-center gap-2">
        <span class="text-gray-600">Filtros r√°pidos:</span>
        <a href="/medicos?q=" class="px-3 py-1 <%= !estadoFiltro && !conCitasFiltro ? 'bg-[#A7D9B8] text-white' : 'bg-gray-100 hover:bg-gray-200' %> rounded-lg transition">Todos</a>
        <a href="/medicos?estado=1" class="px-3 py-1 <%= estadoFiltro === '1' ? 'bg-green-600 text-white' : 'bg-green-100 hover:bg-green-200 text-green-700' %> rounded-lg transition">Activos</a>
        <a href="/medicos?estado=0" class="px-3 py-1 <%= estadoFiltro === '0' ? 'bg-red-600 text-white' : 'bg-red-100 hover:bg-red-200 text-red-700' %> rounded-lg transition">Inactivos</a>
        <a href="/medicos?con_citas=1" class="px-3 py-1 <%= conCitasFiltro === '1' ? 'bg-blue-600 text-white' : 'bg-blue-100 hover:bg-blue-200 text-blue-700' %> rounded-lg transition">Con citas</a>
      </div>
    </div>
  </div>

  <% if (busqueda || estadoFiltro !== undefined || conCitasFiltro) { %>
    <div class="flex items-center gap-4 text-sm text-[#3F4A4C]/70">
      <% if (busqueda) { %>
        <span>B√∫squeda: <strong><%= busqueda %></strong></span>
      <% } %>
      <% if (estadoFiltro === '1') { %>
        <span>Filtro: <strong>M√©dicos Activos</strong></span>
      <% } else if (estadoFiltro === '0') { %>
        <span>Filtro: <strong>M√©dicos Inactivos</strong></span>
      <% } %>
      <% if (conCitasFiltro === '1') { %>
        <span>Filtro: <strong>Con Citas</strong></span>
      <% } %>
    </div>
  <% } %>

  <!-- Tabla de m√©dicos -->
  <div class="overflow-x-auto rounded-2xl bg-white/60 backdrop-blur-md shadow-lg border border-[#E0E6E6]">
    <table class="w-full text-sm text-[#3F4A4C]">
      <thead class="bg-[#A7D9B8]/70 text-[#3F4A4C] font-semibold uppercase tracking-wide">
        <tr>
          <th class="px-6 py-3 text-left">#</th>
          <th class="px-6 py-3 text-left">Nombre</th>
          <th class="px-6 py-3 text-left">Apellido</th>
          <th class="px-6 py-3 text-left">Especialidad</th>
          <th class="px-6 py-3 text-left">Tel√©fono</th>
          <th class="px-6 py-3 text-left">Email</th>
          <th class="px-6 py-3 text-left">Estado</th>
          <th class="px-6 py-3 text-center">Acciones</th>
        </tr>
      </thead>

      <tbody>
        <% if (medicos && medicos.length > 0) { %>
          <% medicos.forEach((m, i) => { %>
            <tr class="border-t border-[#E0E6E6]/60 hover:bg-[#E0E6E6]/40 transition">
              <td class="px-6 py-3"><%= i + 1 %></td>
              <td class="px-6 py-3 font-semibold"><%= m.nombre %></td>
              <td class="px-6 py-3"><%= m.apellido %></td>
              <td class="px-6 py-3"><%= m.especialidad || '-' %></td>
              <td class="px-6 py-3"><%= m.telefono || '-' %></td>
              <td class="px-6 py-3"><%= m.email || '-' %></td>
              <td class="px-6 py-3">
                <% if (m.estado === 1) { %>
                  <span class="text-green-600 font-semibold">Activo</span>
                <% } else { %>
                  <span class="text-red-500 font-semibold">Inactivo</span>
                <% } %>
              </td>
              <td class="px-6 py-3 text-center space-x-2">
                <button onclick='editarMedico(<%= JSON.stringify(m) %>)' class="text-[#489FB5] font-semibold hover:underline">Editar</button>
                <button onclick='confirmarEliminacion("/medicos/eliminar/<%= m.id %>", "m√©dico", "Dr. <%= m.nombre %> <%= m.apellido %>")' class="text-red-500 font-semibold hover:underline">Eliminar</button>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="8" class="text-center py-6 text-gray-500">No hay m√©dicos registrados.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Modal -->
  <%- include('../../partials/modals/modal-medico') %>

</div>
